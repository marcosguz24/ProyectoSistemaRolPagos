@using Modelo.Entidades

@model Ciudad
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminación de una Ciudad</h1>
<p>Formulario para la eliminar una Ciudad en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar la Ciudad: @Model.Nombre_Ciudad</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="CiudadId"/>
                <div class="form-group">
                    <label class="control-label">Ciudad</label>
                    <input class="form-control" asp-for="Nombre_Ciudad" disabled/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Eliminar Ciudad"/>
                </div>
            </form>
        </div>
    </div>
</div>