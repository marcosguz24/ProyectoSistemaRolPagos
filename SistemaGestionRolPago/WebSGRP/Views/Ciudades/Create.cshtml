@using Modelo.Entidades

@model Ciudad
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crea una Ciudad</h1>
<p>Formulario para la creación de una nueva Ciudad en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nueva Ciudad</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Ciudad</label>
                    <input class="form-control" asp-for="Nombre_Ciudad"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Región</label>
                    <select class="form-control" asp-for="RegionId" asp-items="@ViewBag.selectListaRegiones">
                        <option value="">--- Seleccione la Región ---</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear Ciudad"/>
                </div>
            </form>
        </div>
    </div>
</div>