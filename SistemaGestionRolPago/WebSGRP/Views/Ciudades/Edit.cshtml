@using Modelo.Entidades
@model Ciudad
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar una Ciudad</h1>
<p>Formulario para la editar una Ciudad en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted está actualizando la Ciudad: @Model.Nombre_Ciudad</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="CiudadId"/>
                <div class="form-group">
                    <label class="control-label">Ciudad</label>
                    <input class="form-control" asp-for="Nombre_Ciudad"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar Ciudad"/>
                </div>
            </form>
        </div>
    </div>
</div>