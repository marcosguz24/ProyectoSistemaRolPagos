@using Modelo.Entidades
@model RolPago
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar un Rol de Pago</h1>
<p>Formulario para la editar un Rol de Pago en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted está actualizando el Rol: @Model.Rubros.Empleados</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="RolPagoId"/>
                <div class="form-group">
                    <label class="control-label">Empleado</label>
                    <input class="form-control" asp-for="Rubros.Empleados"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción Rol de Pago</label>
                    <input class="form-control" asp-for="Descripcion_RolPagos"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha Inicio</label>
                    <input type="datetime" class="form-control" asp-for="Fecha_Inicio"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha Inicio</label>
                    <input type="datetime" class="form-control" asp-for="Fecha_Fin"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    <input class="form-control" asp-for="Estado_Rol"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar Rol de Pago"/>
                </div>
            </form>
        </div>
    </div>
</div>

