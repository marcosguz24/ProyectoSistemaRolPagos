@using Modelo.Entidades
@model Contrato
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar un Contrato</h1>
<p>Formulario para la editar un Contrato en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted está actualizando el Contrato: @Model.Tipos_Contratos.Nombre_Tipo_Contrato</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="ContratoId"/>
                <div class="form-group">
                    <label class="control-label">Contrato</label>
                    <input class="form-control" asp-for="Tipos_Contratos.Nombre_Tipo_Contrato"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Cargo</label>
                    <input class="form-control" asp-for="Cargos.Nombre_Cargo"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Departamento</label>
                    <input class="form-control" asp-for="Cargos.Departamentos.Nombre_Departamento"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha Inicio</label>
                    <input type="datetime-local" class="form-control" asp-for="Inicio_Contrato"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha Fin</label>
                    <input type="datetime-local" class="form-control" asp-for="Fin_Contrato"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Sueldo</label>
                    <input class="form-control" asp-for="Sueldo_Contrato"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar Contrato"/>
                </div>
            </form>
        </div>
    </div>
</div>

