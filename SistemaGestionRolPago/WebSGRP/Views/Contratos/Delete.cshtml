@using Modelo.Entidades
@model Contrato
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminación de un Contrato</h1>
<p>Formulario para la eliminar un Contrato en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar el Contrato: @Model.Tipos_Contratos.Nombre_Tipo_Contrato</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="ContratoId"/>
                <div class="form-group">
                    <label class="control-label">Contrato</label>
                    <input class="form-control" asp-for="Tipos_Contratos.Nombre_Tipo_Contrato" disabled/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Eliminar Contrato"/>
                </div>
            </form>
        </div>
    </div>
</div>

