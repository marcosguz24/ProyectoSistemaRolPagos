@using Modelo.Entidades
@model Contrato
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creación de los Contratos</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Nuevo Contrato</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">

                <div class="form-group">
                    <label class="control-label">Tipo Contrato</label>
                    <select class="form-control"
                    asp-for="Tipos_Contratos.Nombre_Tipo_Contrato" asp-items="@ViewBag.selectListaTipoContrato" >
                        <option value="">--- Seleccione el Tipo de Contrato ---</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label">Cargos</label>
                    <select class="form-control"
                    asp-for="Cargos.Nombre_Cargo" asp-items="@ViewBag.selectListaCargos" >
                        <option value="">--- Seleccione el Cargo ---</option>
                </select>
                </div>

                <div class="form-group">
                    <label class="control-label">Departamentp</label>
                    <select class="form-control"
                    asp-for="Cargos.Departamentos.Nombre_Departamento" asp-items="@ViewBag.selectListaDepartamentos" >
                        <option value="">--- Seleccione el Tipo de Departamento ---</option>
                </select>
                </div>

                <div class="form-group">
                    <label class="control-label">Sueldo</label>
                    <input class="form-control" asp-for="Sueldo_Contrato" placeholder="Sueldo del Empleado"/>
                </div>

                <div class="form-group">
                    <label class="control-label">Fecha Inicio</label>
                    <input type="datetime-local" class="form-control" asp-for="Inicio_Contrato" placeholder="yyyy/mm/dd"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha Fin</label>
                    <input type="datetime-local" class="form-control" asp-for="Fin_Contrato" placeholder="yyyy/mm/dd"/>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

