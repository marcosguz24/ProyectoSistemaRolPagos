@using Modelo.Entidades
@model IEnumerable<Contrato>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Contratos</h1>
<p>Se presenta la lista de Contratos registrados el SGRP</p>

<div class="container">
    @if(TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    
    <div class="row">
        <div class="col-sm-9">
            <h3>Lista de Contratos</h3>
        </div>
        <div class="col-sm-3">
            <a class="btn btn-success d-block" asp-controller="Contratos" asp-action="Create">
                Crear Contrato
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Tipo Contrato</td>
                    <td>Cargo</td>
                    <td>Departamento</td>
                    <td>Sueldo</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Contrato contrato in Model)
               {
                    <tr>
                        <td>@contrato.Tipos_Contratos.Nombre_Tipo_Contrato</td>
                        <td>@contrato.Cargos.Nombre_Cargo</td>
                        <td>@contrato.Cargos.Departamentos.Nombre_Departamento</td>
                        <td>@contrato.Sueldo_Contrato</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Contratos" asp-action="Edit" asp-route-id="@contrato.ContratoId">
                                Editar
                            </a>
                            <a class="btn btn-danger" asp-controller="Contratos" asp-action="Delete" asp-route-id="@contrato.ContratoId">
                                Borrar
                            </a>
                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
</div>