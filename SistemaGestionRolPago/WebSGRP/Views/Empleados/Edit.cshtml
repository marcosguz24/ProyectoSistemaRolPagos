@using Modelo.Entidades
@model Empleado
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar un Empleado</h1>
<p>Formulario para la editar un Empleado en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted está actualizando la Empleado: @Model.EmpleadoId</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="EmpleadoId"/>
                <div class="form-group">
                    <label class="control-label">Empleado</label>
                    <input class="form-control" asp-for="Nombres_Empleado"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar Empleado"/>
                </div>
            </form>
        </div>
    </div>
</div>
