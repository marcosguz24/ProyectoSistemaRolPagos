@using Modelo.Entidades

@model Empleado
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminación de una Empleado</h1>
<p>Formulario para la eliminar un Empleado en el SGRP</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar el empleado: @Model.Nombres_Empleado</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="EmpleadoId"/>
                <div class="form-group">
                    <label class="control-label">Empleado</label>
                    <input class="form-control" asp-for="Nombres_Empleado" disabled/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Eliminar Empleado"/>
                </div>
            </form>
        </div>
    </div>
</div>

