@using Modelo.Entidades
@model IEnumerable<Empleado>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Empleados</h1>
<p>Se presenta la lista de Empleados registrados en el SGPG</p>

<div class="container">
    @if(TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    
    <div class="row">
        <div class="col-sm-9">
            <h3>Lista de Empleados</h3>
        </div>
        <div class="col-sm-3">
            <a class="btn btn-success d-block" asp-controller="Empleados" asp-action="Create">
                Crear Empleado
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Nombres y Apellidos Empledado</td>
                    <td>Cedula</td>
                    <td>Cargo</td>
                    <td>Jornada Trabajo</td>
                    <td>Permisos</td>
                    <td>Rubro</td>
                    <td>Aciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Empleado empleado in Model)
               {
                    <tr>
                        <td>@empleado.Nombres_Empleado @empleado.Apellidos_Empleado</td>
                        <td>@empleado.Cedula_Empleado</td>
                        <td>@empleado.Contrato.Cargos.Nombre_Cargo</td>
                        <td>@empleado.Jornada_Trabajo</td>
                        <td>@empleado.Permiso.Nombre_Permiso</td>
                        <td>@empleado.Rubros</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Empleados" asp-action="Edit" asp-route-id="@empleado.EmpleadoId">
                                Editar
                            </a>
                            <a class="btn btn-danger" asp-controller="Empleados" asp-action="Delete" asp-route-id="@empleado.EmpleadoId">
                                Borrar
                            </a>
                        </td>
                    </tr>
               }
            </tbody>
        </table>
    </div>
</div>

